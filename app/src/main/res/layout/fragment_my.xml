<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/login_background">

    <RelativeLayout
        android:id="@+id/rl_username"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/login_rlbackground1">

        <ImageView
            android:id="@+id/iv_username"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:src="@drawable/login_name"/>

        <View
            android:id="@+id/divider1"
            style="@style/divider_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_username"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/divider1"
            android:background="@null"
            android:hint="我的账号"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#dddddd"
            android:textColorHint="#dddddd"
            android:textSize="14sp"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider0"
        style="@style/divider2"
        android:layout_below="@+id/rl_username"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"/>

    <RelativeLayout
        android:id="@+id/rl_password"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_below="@+id/divider0"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/login_rlbackground2">

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dip"
            android:src="@drawable/login_password"/>

        <View
            android:id="@+id/divider2"
            style="@style/divider_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_password"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/divider2"
            android:background="@null"
            android:hint="我的密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textColor="#dddddd"
            android:textColorHint="#dddddd"
            android:textSize="14sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_password"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_login"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前对讲组："
            android:textColor="#0000FF"
            android:textSize="15dp"/>

        <ExpandableListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </ExpandableListView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PTT"
            android:textSize="30dp"/>

    </LinearLayout>

</RelativeLayout>