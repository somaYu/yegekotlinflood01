<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_base_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/status01"
>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ease_mm_title_back"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:text="排水防涝"
        android:textColor="#ffffff"
        android:textSize="20sp"
    />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="10dp"
        android:layout_height="11dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="1dp"
        android:layout_toRightOf="@+id/tv_title"
        android:background="@drawable/c0"
        android:visibility="gone"
    />

    <RelativeLayout
        android:id="@+id/rl_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:visibility="gone"
    >

        <ImageView
            android:id="@+id/iv_jump"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/table"
        />

        <TextView
            android:id="@+id/tv_jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/iv_jump"
            android:background="@android:color/transparent"
            android:text="图表"
            android:textColor="#ffffff"
            android:textSize="12sp"
        />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:visibility="gone"
    >

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="10dp"
            android:layout_height="16dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/location"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="重新定位"
            android:textColor="#ffffff"
            android:textSize="14sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_shaixuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="筛选"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:visibility="gone"
    />

</RelativeLayout>